<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @post.title %>
      </h1>
      <h2 class="subtitle">
      </h2>
    </div>
  </div>
</section>

<div class="section">
    <div class="container">
        <div class="level">
            <div class="level-left">
                <p class="level-item">
                    <strong>Actions</strong>
                </p>
            </div>

            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Edit", edit_post_path(@post), class: "button" %>
                </p>
                <p class="level-item">
                    <%= link_to "Delete", root_path, class: "button is-danger" %>
                </p>
            </div>
        </div>

        <div class="container">
            <%= @post.content %>
        </div>
    </div>
</div>
