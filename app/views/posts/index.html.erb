     <section class="hero is-primary is-medium">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <img src="https://cdn0.iconfinder.com/data/icons/typicons-2/24/th-large-outline-512.png" alt="Logo">
          </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Foursquare
      </h1>
      <h2 class="subtitle">
        There is always two sides
      </h2>
    </div>
  </div>
</section>

<section class="section">
    <div class="container">
         <%= link_to "Create new post", new_post_path, class: "button is-primary" %>
        <% @posts.each do |post| %>
            <div class="card">
                <div class="card=content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"> <%= link_to post.title, post %></p>
                        </div>
                    </div>
                    <div class="content">
                        <%= post.content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>

